<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboarding.IntermediateFragment">


    <ImageView
        android:id="@+id/imageView_inter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:src="@drawable/beginner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/textView_inter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="INTERMEDIATE"
        android:textColor="#616466"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView_inter"
        app:layout_constraintStart_toStartOf="@+id/imageView_inter"
        app:layout_constraintTop_toBottomOf="@+id/imageView_inter" />

    <TextView
        android:id="@+id/textView2_inter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_medium"
        android:text="500-1000 Words"
        android:textSize="16sp"
        android:textColor="#87a4c5"
        app:layout_constraintEnd_toEndOf="@+id/textView_inter"
        app:layout_constraintStart_toStartOf="@+id/textView_inter"
        app:layout_constraintTop_toBottomOf="@+id/textView_inter" />


</androidx.constraintlayout.widget.ConstraintLayout>