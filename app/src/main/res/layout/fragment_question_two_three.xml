<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.QuestionTwoThreeFragment">

    <TextView
        android:id="@+id/chooseTextView_slideTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/quicksand_bold"
        android:includeFontPadding="false"
        android:text="Choose Your"
        android:textColor="#b4b4aa"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nativeLanguage_slideTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/quicksand_bold"
        android:includeFontPadding="false"
        android:text="NATIVE LANGUAGE"
        android:textColor="#2490ff"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseTextView_slideTwo" />

    <TextView
        android:id="@+id/slideTwoTextView"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:fontFamily="@font/quicksand_bold"
        android:includeFontPadding="false"
        android:text="2"
        android:textColor="#edf5ff"
        android:textSize="160sp"
        app:layout_constraintBottom_toBottomOf="@+id/nativeLanguage_slideTwo"
        app:layout_constraintStart_toEndOf="@+id/nativeLanguage_slideTwo" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#f4faff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.76">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/grey_shadow"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextButton_slideTwo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/right_cornered_button_blue"
            android:fontFamily="@font/quicksand_bold"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="NEXT"
            android:textSize="24sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintWidth_percent="0.73" />

        <ImageView
            android:id="@+id/chevron_left_slide2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="48dp"
            android:adjustViewBounds="true"
            android:elevation="16dp"
            android:src="@drawable/ic_chevron_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/backButton_slideTwo"
            app:layout_constraintHeight_percent="0.035"
            app:layout_constraintStart_toStartOf="@+id/backButton_slideTwo"
            app:layout_constraintTop_toTopOf="@+id/backButton_slideTwo" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton_slideTwo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/shadow_file"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:shadowColor="#000"
            android:shadowDx="5"
            android:shadowDy="-5"
            android:shadowRadius="2"
            app:backgroundTint="@null"
            app:elevation="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.212" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/nativeLanguageRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingLeft="183dp"
        android:paddingRight="183dp"
        app:layout_constraintTop_toBottomOf="@+id/nativeLanguage_slideTwo" />


    <TextView
        android:id="@+id/chooseYourTextView_slideTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/quicksand_bold"
        android:includeFontPadding="false"
        android:text="Choose Your"
        android:textColor="#b4b4aa"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nativeLanguageRecyclerView" />

    <TextView
        android:id="@+id/motivation_slideTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/quicksand_bold"
        android:includeFontPadding="false"
        android:text="MOTIVATION"
        android:textColor="#2490ff"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseYourTextView_slideTwo" />


</androidx.constraintlayout.widget.ConstraintLayout>