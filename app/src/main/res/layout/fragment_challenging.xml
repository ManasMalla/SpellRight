<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboarding.ChallengingFragment">


    <ImageView
        android:id="@+id/imageView_challenge"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/challenging"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.55"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/textView_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="CHALLENGING"
        android:textColor="#616466"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView_challenge"
        app:layout_constraintStart_toStartOf="@+id/imageView_challenge"
        app:layout_constraintTop_toBottomOf="@+id/imageView_challenge" />

    <TextView
        android:id="@+id/textView2_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_medium"
        android:text="1000-2500 Words"
        android:textSize="16sp"
        android:textColor="#87a4c5"
        app:layout_constraintEnd_toEndOf="@+id/textView_challenge"
        app:layout_constraintStart_toStartOf="@+id/textView_challenge"
        app:layout_constraintTop_toBottomOf="@+id/textView_challenge" />


</androidx.constraintlayout.widget.ConstraintLayout>